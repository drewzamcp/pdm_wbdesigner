<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content" tal:omit-tag="True">
        <div>
            <h1>Wristband Designer Inputs</h1>

            <form class="form-horizontal" enctype="multipart/form-data" action="/designer/">
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Email:</label>
                    <div class="col-sm-10">
                        <input
                                type="email"
                                class="form-control"
                                id="email"
                                placeholder="Enter email">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-10" for="wristbandText">Wristband text</label>
                    <div class="col-sm-10">
                        <input type="text"
                               name="wbtext"
                               class="form-control"
                               id="wristbandText"
                               placeholder="Enter text">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-10" for="wristbandImage">Choose image file to upload</label>
                    <p class="control-label col-sm-10">Only JPEG or PNG files can be uploaded.</p>
                    <input type="file"
                           name="upload-file"
                           class="form-control-file col-sm-10"
                           id="wristbandImage"
                           value="${ upload-file }"
                           accept="image/jpeg, image/png"
                    >
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </div>
            </form>
        </div>

    </div>

</div>