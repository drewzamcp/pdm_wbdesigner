[Unit]
Description=gunicorn uvicorn service for Wristband Designer
After=syslog.target

[Service]

User=wbduser
RuntimeDirectory=gunicorn
WorkingDirectory=/apps/wbdesigner/pdm_project_one
Environment="PATH=/apps/wbdesigner/.venv/bin"
ExecStart=/apps/wbdesigner/.venv/bin/gunicorn -b 127.0.0.1:8000 -w 4 -k uvicorn.workers.UvicornWorker main:app>
Restart=always
Type=notify
StandardError=syslog
NotifyAccess=all
ExecStart=/apps/wbdesigner/.venv/bin/gunicorn -b 127.0.0.1:8000 -w 4 -k uvicorn.workers.UvicornWorker main:app --access-logfile /apps/logs/wbdesigner/access.log --error-logfile /apps/logs/wbdesigner/errors.log --user wbduser
# \/ \/ <- Added post recording for better restart perf.
# ExecReload=/bin/kill -s HUP $MAINPID
